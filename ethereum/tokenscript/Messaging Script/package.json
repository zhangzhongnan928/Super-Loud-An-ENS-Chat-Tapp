{
	"name": "tokenscript",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run build:ts",
		"build:ts": "tokenscript build",
		"sign": "../../../bin/dev sign -k ../contract/test-signing.key",
		"sign:prod": "../../../bin/dev sign -k ../contract/prod-signing.key -r ./ts-certificate-prod.pem",
		"emulate": "tokenscript emulate",
		"emulate:local": "tokenscript emulate -e=http://localhost:3333/",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write ."
	},
	"devDependencies": {
		"@smui/radio": "^7.0.0-beta.17",
		"@smui/slider": "^7.0.0-beta.18",
		"@sveltejs/adapter-auto": "^2.0.0",
		"@sveltejs/kit": "^1.20.4",
		"@tokenscript/card-sdk": "^1.1.0",
		"@typescript-eslint/eslint-plugin": "^6.0.0",
		"@typescript-eslint/parser": "^6.0.0",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte": "^2.30.0",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.10.1",
		"svelte": "^4.0.5",
		"svelte-check": "^3.4.3",
		"svelte-preprocess": "^5.0.4",
		"svelte-preprocess-sass": "^2.0.1",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^4.4.2",
		"vite-plugin-singlefile": "^0.13.5"
	},
	"type": "module",
	"dependencies": {
		"bn.js": "^5.2.1",
		"crypto-js": "^4.2.0",
		"dotenv": "^16.3.1",
		"@tokenbound/sdk": "^0.4.5",
		"ethers": "^6.7.1",
		"ethers-decode-error": "^2.1.3",
		"svelte-material-ui": "^7.0.0-beta.18",
		"svelte-select": "^5.8.3"
	}
}
